<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/imageutils")
</head>
<body>
<div id="wrapper">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <!-- menu ausgeblendet -->
                <!-- <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"><i class="fa-cloud-upload fa-2x"></i></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button> -->
                <img id="icon" src="..\..\Content\img\icon.png">
                <a class="navbar-brand" href="/">Alexandra & Michael</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="/">Home</a></li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
<hr />
<footer>
    <p>&copy; @DateTime.Now.Year - Eure Software-Homies</p>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

<style type="text/css">
    html {
        height: 100%;
    }

    #wrapper {
        height: 100%;
        margin-bottom: -55px;
    }

    footer {
        height: 55px;
    }

    body {
        background-image: url(../../Content/img/bg.png);
        background-repeat: no-repeat;
        height: 100%;
    }

    #icon {
        float: left;
        margin-top: 10px;
        margin-left: 10px;
    }

    #submitBtn {
        background-color: #F09012;
        border: 0;
    }
</style>
</body>
</html>
